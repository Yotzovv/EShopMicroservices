{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker: Attach to .NET",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": ["exec", "-i", "eshop-microservices-catalog.api-1"],
                "debuggerPath": "/vsdbg/vsdbg",
                "pipeCwd": "${workspaceFolder}",
                "quoteArgs": false
            },
            "sourceFileMap": {
                "/src": "${workspaceFolder}",
                "/src/Services/Catalog/Catalog.API": "${workspaceFolder}/Services/Catalog/Catalog.API"
            },
            "justMyCode": false
        }
    ]
}