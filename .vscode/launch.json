{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Catalog API (Local)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Catalog API",
            "program": "${workspaceFolder}/eshop-microservices/Services/Catalog/Catalog.API/bin/Debug/net8.0/Catalog.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/eshop-microservices/Services/Catalog/Catalog.API",
            "console": "internalConsole",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Attach to Docker Container",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": ["exec", "-i", "eshop-microservices-catalog.api-1"],
                "debuggerPath": "/vsdbg/vsdbg",
                "pipeCwd": "${workspaceFolder}",
                "quoteArgs": false
            }
        },
        {
            "name": "Attach to Process",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}